<% if flash.any? %>
  <div class="alert alert-dismissible <%= if flash.notice.nil?
        'alert-danger'
      else
        'alert-success'
      end %>", data-hide='auto'>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <% flash.each do |name, msg| %>
      <%= content_tag :p, msg.html_safe, class: 'mb-0' %>
    <% end %>
  </div>
<% end %>
