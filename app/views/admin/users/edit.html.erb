<% content_for :page_title do %>
  <span class='page-title col-md-offset-10 col-xs-offset-10'>
    <%= link_to t(:user_page_title, scope: :action), admin_users_url %> /
    <%= @user.name %>
  </span>
<% end %>

<% content_for :page_action do %>
  <%= link_to t(:page_action_show, scope: [:action]), admin_user_url(@user), class: 'btn btn-info page-action col-md-offset-10 col-xs-offset-10' %>
<% end %>

<div class="form-div col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">

  <% if @user.errors.any? %>
    <%= render 'shared/form_errors', model_object: @user %>
  <% end %>

  <%= form_with(scope: @user, url: admin_user_path(@user), local: true, method: :patch) do |form| %>
    <fieldset>
      <div class="form-group">
        <h4 class= 'col-md-offset-5 col-xs-offset-5'>Update User</h4>
      </div>

      <%= render 'form', form: form, user: @user, email_disable_status: true %>

      <%= form.submit t(:update_profile, scope: [:action]), class: 'btn btn-primary col-md-offset-5' %>
    </fieldset>
  <% end %>
</div>
