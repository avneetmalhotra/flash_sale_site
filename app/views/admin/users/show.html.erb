<% content_for :page_title do %>
  <span class="page-title <%= @user.admin?? 'col-md-offset-5  col-xs-offset-5' : 'col-md-offset-10  col-xs-offset-10' %>">
    <%= link_to t(:user_page_title, scope: [:action]), admin_users_url %> /
    <%= t(:show, scope: :action) %>
  </span>
<% end %>

<% unless @user.admin? %>
  <% content_for :page_action do %>
    <%= link_to t(:page_action_edit, scope: [:action]), edit_admin_user_url(@user), class: 'btn btn-success page-action col-md-offset-10 col-xs-offset-10' %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-8 col-xs-8 col-md-offset-2 col-xs-offset-2">
    <table class='table table-striped table-hover'>
      <tr>
        <td>Name</td>
        <td><%= @user.name %></td>
      </tr>
      
      <tr>
        <td>Email Id</td>
        <td><%= @user.email %></td>
      </tr>

      <tr>
        <td>User Status</td>
        <td>
          <%= @user.presenter.status %>
        </td>
      </tr>
      
      <tr>
        <td>Admin?</td>
        <td><%= @user.admin? %></td>
      </tr>
      
      <tr>
        <td>Confirmed at</td>
        <td><%= @user.confirmed_at %></td>
      </tr>

    </table>
  </div>
</div>
