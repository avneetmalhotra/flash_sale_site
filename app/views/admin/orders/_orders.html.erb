<br>
<div class="table-responsive">
    <div class="panel panel-default">  
      <table class="table table-striped table-hover">
        
        <thead>
          <tr>
            <th nowrap>#</th>
            <th nowrap>INVOICE NUMBER</th>
            <th nowrap>USER EMAIL</th>
            <th nowrap>COMPLETED AT</th>
            <th nowrap>DELIVERED AT</th>
            <th nowrap>CANCELLED AT</th>
            <th nowrap>QUANTITY</th>
            <th nowrap>ITEM(S) SUBTOTAL</th>
            <th nowrap>LOYALTY DISCOUNT</th>
            <th nowrap>GRAND SUBTOTAL</th>
            <th nowrap></th>
          </tr>
        </thead>
        
        <tbody>
          <% orders.includes(:user).each.with_index(1) do |order, serial_number| %>
            <tr>
              <td><%= serial_number %></td>

              <td><%= order.invoice_number %></td>

              <td><%= order.user.email %></td>
            
              <td><%= order.completed_at %></td>
                
              <td><%= order.presenter.delivery_time %></td>

              <td><%= order.presenter.cancellation_time %></td>

              <td><%= order.total_items_quantity %></td>

              <td><%= number_to_currency(order.items_subtotal) %></td>

              <td><%= number_to_currency(order.loyalty_discount) %></td>

              <td><%= number_to_currency(order.total_amount) %></td>

              <td>
                <%= link_to t(:page_action_show, scope: [:action]), admin_order_path(order.invoice_number) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
