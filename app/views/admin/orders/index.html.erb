<% content_for :page_title do %>
  <span class="col-md-offset-5 col-xs-offset-5 page-title"><%= t(:order_page_title, scope: [:action]) %></span>
<% end %>

<div class="browse-order clearfix">
  <%= form_with(scope: :user, url: browse_admin_orders_path, local: true, class: 'navbar-form navbar-left') do |form| %>
    <%= form.text_field :email, class: 'form-control', placeholder: 'a@mail.com' %>
    <%= form.submit I18n.t(:filter, scope: [:action]), class: 'btn btn-default' %>
  <% end %>
</div>
<br>

<div class="col-md-12 col-xs-12">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#open-orders" data-toggle="tab" aria-expanded="true">Open Orders</a></li>
    <li class=""><a href="#delivered-orders" data-toggle="tab" aria-expanded="false">Delivered Orders</a></li>
    <li class=""><a href="#cancelled-orders" data-toggle="tab" aria-expanded="false">Cancelled Orders</a></li>
  </ul>

  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="open-orders">
      <% if @open_orders.try(:present?) %>
        <%= render partial: 'orders', object: @open_orders %>
      <% else %>
        <h3>No Open Orders</h3>
      <% end %>
    </div>

    <div class="tab-pane fade" id="delivered-orders">
      <% if @delivered_orders.try(:present?) %>
        <%= render partial: 'orders', object: @delivered_orders %>
      <% else %>
        <h3>No Delivered Orders</h3>
      <% end %>
    </div>
    
    <div class="tab-pane fade" id="cancelled-orders">
      <% if @cancelled_orders.try(:present?) %>
        <%= render partial: 'orders', object: @cancelled_orders %>
      <% else %>
        <h3>No Cancelled Orders</h3>
      <% end %>
    </div>
  </div>
</div>
