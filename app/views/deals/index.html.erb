<% if @live_deals.empty? %>
  <h2 class="col-md-6 col-md-offset-4 col-xs-6 col-xs-offset-4">There are no Live Deals available.</h2>
<% else %>
  <%= render 'live_deals', live_deals: @live_deals %>
<% end %>

<hr class="col-md-12">
<% if @expired_deals.empty? %>
  <h2 class="col-md-6 col-md-offset-4 col-xs-6 col-xs-offset-4">There are no Past Deals available.</h2>
<% else %>
  <%= render 'expired_deals', expired_deals: @expired_deals %>
<% end %>
