<article class="live-deals col-md-12 col-xs-12">
  <h2 class="col-md-6 col-md-offset-5 col-xs-6 col-xs-offset-5">Live Deals</h2>

    <% deals_live.each do |deal| %>
      <section class="deal panel panel-default col-md-4 col-xs-6">
        <div class="panel-body">

          <div class="deal-countdown-timer text-centre", data-timer='yes', data-end-at="<%= deal.end_at %>"></div>

          <div class="deal-images col-md-offset-1 col-xs-offset-1">
            <ul class= 'bxslider', data-slider='deal-preview-image'>
              <% if deal.images.exists? %>
              
                  <% deal.images.each do |deal_image| %>
                    <li><%= image_tag deal_image.avatar.url(:medium) %></li>
                  <% end %>
              
              <% else %>
                <li><%= image_tag NO_IMAGE_AVAILABLE_PATH, size: '240' %></li>
              <% end %>
            </ul>
          </div>

          <h3 class="text-centre"><strong><%= deal.title %></strong></h3>
          <div class="row">
            <div class="col-md-6 col-xs-6">
              <p>
                <span class="text-muted"><del><%= number_to_currency(deal.price) %><del></span>
                <span class="lead text-success"><%= number_to_currency(deal.discount_price) %></span>
              </p>
              <p>Only <span class="lead text-primary"><%= deal.quantity %></span> more left</p>
            </div>

            <div class="col-md-4 col-md-offset-1 col-xs-5 col-xs-offset-1">
              <%= link_to I18n.t(:view_deal, scope: :action), deal_url(deal), class: 'btn btn-primary btn-lg view-deal-btn' %>
            </div>
          </div>

        </div>
      </section>
    <% end %>

</article>
