<%= form_with(scope: :user, url: registrations_path, local: true ) do |form| %>
  <fieldset>
    <legend>Enter you details:</legend>
    <div class="form-group">
      <%= form.label :name, 'Full Name' %>
      <%= form.text_field :name, id: :user_name, class: 'form-control', placeholder: 'Enter Name' %>
      <%= display_error(:name, user) %>
    </div>
    
    <div class="form-group">
      <%= form.label :email, 'Email Address' %>
      <%= form.email_field :email, id: :user_email, class: 'form-control', placeholder: 'Enter email' %>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      <%= display_error(:email, user) %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password, class: 'form-control', placeholder: 'Password' %>
      <%= display_error(:password, user) %>
    </div>

    <div class='form-group'>
      <%= form.label :password_confirmation, 'Confirm Password' %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
      <%= display_error(:password_confirmation, user) %>
    </div>

    </fieldset>
    <%= form.submit 'Sign Up', class: 'btn btn-primary' %>
  </fieldset>
<% end %>
