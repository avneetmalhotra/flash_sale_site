<% if current_order.nil? || current_order.line_items.empty? %>
 <h3 class="text-centre">Cart is Empty</h3>

<% else %>
  <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
    
    <div class="table-responsive ">
      <div class="panel panel-default">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th></th>
              <th nowrap>TITLE</th>
              <th nowrap>QUANTITY</th>
              <th nowrap>PRICE</th>
              <th nowrap>DISCOUNTED PRICE</th>
            </tr>
          </thead>
          <tbody>
            <%= render current_order.line_items %>
          <tr>
            <td colspan="4"><strong><p class="col-md-offset-7">Total Order Amount:</p></strong></td>
            <td colspan="2"><strong><%= number_to_currency(current_order.total_amount) %></strong></td>
          </tr>
          </tbody>
        </table>

      </div>
    </div>

    <div>
      <%= link_to I18n.t(:empty_cart, scope: [:action]), order_url(current_order), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
    </div>
    
  </div>
<% end %>
