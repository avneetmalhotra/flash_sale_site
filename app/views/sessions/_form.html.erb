<div class="login-page">
  <div class="login-form jumbotron clearfix">
    <%= form_with(scope: :user, url: login_path, local: true ) do |form| %>
      <fieldset>
        <legend>LOGIN</legend>
        
        <div class="form-group">
          <%= form.label :email, 'Email Address' %>
          <%= form.email_field :email, id: :user_email, class: 'form-control', placeholder: 'myemail@gmail.com' %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, id: :user_password, class: 'form-control', placeholder: '******' %>
        </div>

        <%= form.submit 'Login', class: 'btn btn-primary' %>
      </fieldset>
    <% end %>
  </div>

  <%= button_to 'Confirmation email not recieved', new_confirmation_path, method: 'get', class: 'btn btn-info' %>

  <div class="create-account jumbotron">
    <small class="text-primary">New to Deals He Deals</small>
    <%= button_to 'Create new Account', new_registration_path, method: 'get', class: 'btn btn-secondary' %>
  </div>
</div>