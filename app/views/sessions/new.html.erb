<div class="form-div col-md-6 col-md-offset-3">
  <%= form_with(scope: :user, url: login_path, local: true ) do |form| %>
    <fieldset>
      <div class="form-group">
        <h4 class= 'col-md-offset-5 col-xs-offset-5'>LOGIN</h4>
      </div>

      <div class="form-group">
        <%= form.label :email, 'Email' %>
        <%= form.email_field :email, id: :user_email, class: 'form-control', placeholder: 'myemail@gmail.com' %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, id: :user_password, class: 'form-control', placeholder: '******' %>
      </div>

      <div class="form-group">
        <label>
          <%= check_box_tag 'remember_me', 'yes', false, class: 'form-check-input' %>
          Remember Me
        </label>
      </div>

      <div class="form-group">
        <div>
          <%= form.submit t(:login, scope: [:action]), class: 'btn btn-primary col-md-offset-5 col-xs-offset-5' %>
        </div>
      </div>
      <div class="form-group">
        <%= link_to t(:confirmation_email_not_recieved, scope: [:action]), new_confirmation_path, class: 'col-md-6' %>
        <span class='col-md-6'>
        <%= link_to t(:create_account, scope: [:action]), new_registration_path, class: 'col-md-offset-5' %>
        </span>
      </div>
    </fieldset>
  <% end %>
</div>
