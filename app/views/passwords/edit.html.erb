<div class='form-div col-md-6 col-md-offset-3'>
  <%= form_with(scope: @user, url: password_reset_url(password_reset_token: params[:password_reset_token]), local: true, method: :patch ) do |form| %>
    <fieldset>
      <div class="form-group <%= 'has-error' if has_error?(:password, @user) %>">
        <%= form.label :password, 'New Password', class: 'required-field' %>
        <%= form.password_field :password, class: 'form-control', placeholder: '******' %>
        <%= display_error(:password, @user) %>
      </div>

      <div class="form-group <%= 'has-error' if has_error?(:password_confirmation, @user) %>">
        <%= form.label :password_confirmation, 'Confirm Password', class: 'required-field' %>
        <%= form.password_field :password_confirmation, class: 'form-control', placeholder: '******' %>
        <%= display_error(:password_confirmation, @user) %>
      </div>

      <%= form.submit t(:reset, scope:[:action]), class: 'btn btn-primary  col-md-offset-5' %>
    </fieldset>
  <% end %>
</div>
